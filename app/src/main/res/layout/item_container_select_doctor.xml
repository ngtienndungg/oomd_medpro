<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_6sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:background="@drawable/background_health_facility_item"
    android:paddingHorizontal="@dimen/_16sdp"
    android:paddingVertical="@dimen/_12sdp">

    <ImageView
        android:id="@+id/ivDoctor"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:importantForAccessibility="no"
        android:src="@mipmap/ic_doctor" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivDoctor"
        android:layout_alignBottom="@id/ivDoctor"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toEndOf="@id/ivDoctor"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textAllCaps="true"
        android:textColor="@color/colorDoctorName"
        android:textSize="@dimen/_11ssp" />

    <ImageView
        android:id="@+id/ivGender"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_below="@id/ivDoctor"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:importantForAccessibility="no"
        android:src="@mipmap/ic_doctor_gender" />

    <TextView
        android:id="@+id/tvGenderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivGender"
        android:layout_alignBottom="@id/ivGender"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toEndOf="@id/ivGender"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/gender_label"
        android:textColor="@color/colorDoctorInformation"
        android:textSize="@dimen/_11ssp" />

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivGender"
        android:layout_alignBottom="@id/ivGender"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_toEndOf="@id/tvGenderLabel"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/colorDoctorInformation"
        android:textSize="@dimen/_11ssp" />

    <ImageView
        android:id="@+id/ivDepartment"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_below="@id/ivGender"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:importantForAccessibility="no"
        android:src="@mipmap/ic_specialist" />

    <TextView
        android:id="@+id/tvDepartmentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivDepartment"
        android:layout_alignBottom="@id/ivDepartment"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toEndOf="@id/ivDepartment"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/department_label"
        android:textColor="@color/colorDoctorInformation"
        android:textSize="@dimen/_11ssp" />

    <TextView
        android:id="@+id/tvDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivDepartment"
        android:layout_alignBottom="@id/ivDepartment"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_toEndOf="@id/tvDepartmentLabel"
        android:fontFamily="@font/quicksand_semi_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/colorDoctorInformation"
        android:textSize="@dimen/_11ssp" />

    <ImageView
        android:id="@+id/ivCalendar"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_below="@id/ivDepartment"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:importantForAccessibility="no"
        android:src="@mipmap/ic_doctor_schedule" />

    <TextView
        android:id="@+id/tvCalendarLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivCalendar"
        android:layout_alignBottom="@id/ivCalendar"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toEndOf="@id/ivCalendar"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/appointment_calendar_this_week"
        android:textColor="@color/colorDoctorInformation"
        android:textSize="@dimen/_11ssp" />

    <TextView
        android:id="@+id/tvCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvCalendarLabel"
        android:layout_alignBottom="@id/tvCalendarLabel"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_toEndOf="@id/tvCalendarLabel"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/colorDoctorInformation"
        android:textSize="@dimen/_11ssp" />

    <ImageView
        android:id="@+id/ivPrice"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_below="@id/ivCalendar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:importantForAccessibility="no"
        android:src="@mipmap/ic_price" />

    <TextView
        android:id="@+id/tvPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivPrice"
        android:layout_alignBottom="@id/ivPrice"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toEndOf="@id/ivPrice"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/price_label"
        android:textColor="@color/colorDoctorInformation"
        android:textSize="@dimen/_11ssp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivPrice"
        android:layout_alignBottom="@id/ivPrice"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_toEndOf="@id/tvPriceLabel"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/temporary_unlabeled"
        android:textColor="@color/colorDoctorInformation"
        android:textSize="@dimen/_11ssp" />

</RelativeLayout>